<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/logo"

        />

    <TextView
        android:id="@+id/tv_t"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img"
        android:text="Welcome to"
        android:textSize="14sp"
        android:textColor="@color/Gray"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="3dp"

        />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_t"
        android:text="MK Blood Bank "
        android:textColor="@color/Red"
        android:layout_marginLeft="18dp"
        android:textStyle="bold"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome"
        android:text="You can use our platform as a donor or recipient.How would you like to continue?"
        android:textSize="16sp"
        android:layout_marginLeft="18dp"
        android:textColor="@color/Black"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20sp"
            >

            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@color/Black"
                android:layout_width="150dp"

                android:layout_height="wrap_content"
                android:layout_margin="10dp">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/donor"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Red"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="13dp"
                        android:layout_marginLeft="15dp"
                        android:text="@string/donor"
                        />

                    <TextView
                        android:id="@+id/sp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/donor"
                        android:textColor="@color/Gray"
                        android:textSize="13sp"
                        android:layout_margin="15dp"
                        android:layout_marginLeft="3dp"
                        android:text="Donate blood inorder to save a life to a person in need."
                        />
                    <TextView
                        android:id="@+id/donor_tv"
                        android:layout_below="@id/sp"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:text="Select"
                        android:paddingTop="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/White"
                        android:background="@color/Red"

                        />

                </RelativeLayout>



            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:background="@color/Black"
                android:layout_width="150dp"

                android:layout_height="wrap_content"
                android:layout_margin="10dp">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/recipient"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="13dp"
                        android:layout_marginLeft="15dp"
                        android:text="@string/recipient"
                        />

                    <TextView
                        android:id="@+id/bs"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/recipient"
                        android:layout_margin="15dp"
                        android:text="Get a nearest donor within short period of time."
                        android:textColor="@color/Gray"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/recipient_tv"
                        android:layout_below="@id/bs"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:text="Select"
                        android:paddingTop="10dp"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/White"
                        android:background="@color/Black"

                        />

                </RelativeLayout>



            </androidx.cardview.widget.CardView>

        </LinearLayout>



    </RelativeLayout>


</RelativeLayout>